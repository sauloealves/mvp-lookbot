generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Loja {
  id        String     @id @default(uuid())
  nome      String
  ativo     Boolean    @default(true)
  usuarios  Usuario[]
  roupas    Roupa[]
  clientes  Cliente[]
  compras   Compra[]
}

model Usuario {
  id         String   @id @default(uuid())
  nome       String
  email      String   @unique
  senha_hash String
  is_admin   Boolean  @default(false)
  loja_id    String
  loja       Loja     @relation(fields: [loja_id], references: [id])
}

model Cliente {
  id        String   @id @default(uuid())
  nome      String
  telefone  String
  endereco  String
  loja_id   String
  loja      Loja     @relation(fields: [loja_id], references: [id])
  compras   Compra[]
}

model Roupa {
  id                  String   @id @default(uuid())
  descricao_curta     String
  cores_predominantes String[] // ARRAY no PostgreSQL
  tom_de_pele         String
  estilo              String
  url                 String
  valor               Float
  ativo               Boolean  @default(true)
  loja_id             String
  loja                Loja     @relation(fields: [loja_id], references: [id])
  itens               CompraItem[]
}

model Compra {
  id         String       @id @default(uuid())
  data       DateTime     @default(now())
  total      Float
  loja_id    String
  cliente_id String
  loja       Loja         @relation(fields: [loja_id], references: [id])
  cliente    Cliente      @relation(fields: [cliente_id], references: [id])
  itens      CompraItem[]
}

model CompraItem {
  id              String   @id @default(uuid())
  compra_id       String
  roupa_id        String
  quantidade      Int
  valor_unitario  Float
  valor_total     Float
  compra          Compra   @relation(fields: [compra_id], references: [id])
  roupa           Roupa    @relation(fields: [roupa_id], references: [id])
}